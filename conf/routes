# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*      /                						module:secure
*      /objects                					module:crud

# Home page
*      /                						Application.index

*      /patientView/list						PatientView.patients
*	   /patientView/show/{id}					PatientView.show
*	   /patientView/add							PatientView.add
*      /patientView/{type}      				PatientView.updatePatientsTable

*      /userView/show							UserView.showUser

*		/surveyView/show/{id}					SurveyView.show
*		/surveyView/add							SurveyView.add
*		/surveyView/delete						SurveyView.delete
*		/surveyView/edit/{id}					SurveyView.edit

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all
*       /{controller}/{action}                  {controller}.{action}