#{extends 'CRUD/layout.html' /}
#{set title:messages.get('objects.analysisnorms') /}

<script>
$(document).ready(function() {
	$("tbody tr").each(function() {
		$(this).removeClass("odd").removeClass("even");
		$(this).find("td").each(function() {
			var link = $(this).find('.hiddenLinks').text();
			$(this).click(function() {
				$(location).attr("href", link);
			});
			$(this).hover(
			  function () {
			    $(this).addClass("hover");
			  },
			  function () {
			    $(this).removeClass("hover");
			  });
		});	
	});
});
</script>

<div id="crudList" class="${type.name}">

    <h2 id="crudListTitle">&{'objects.analysisnorms'}</h2>

    <div id="crudListSearch">
        #{crud.search /}
    </div>

    <div id="crudListTable">
        #{crud.table fields:['analysis', 'description', 'unit'] }
           #{crud.custom 'analysis'}
           	  <span class="hiddenLinks">@{Analysiss.show(object.analysis.analysisId)}</span>
		      ${object.analysis.analysisName}
		   #{/crud.custom}
           #{crud.custom 'description'}
           	  <span class="hiddenLinks">@{AnalysisNorms.show(object.analysisNormId)}</span>
		      ${object.description}
		   #{/crud.custom}
		#{/ crud.table}
    </div>

    <div id="crudListPagination">
    	&{'total', models.AnalysisNorm.count()}
        #{pagination /}
    </div>

    <p id="crudListAdd">
        <a href="@{blank()}">&{'analysisnorm.add'}</a>
    </p>

</div>
